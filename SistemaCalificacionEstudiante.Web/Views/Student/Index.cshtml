@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<div class="container my-4">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Crear Nuevo Estudiante
            </a>
        </div>
    </div>

    <div class="card shadow-sm p-3">
        <table id="studentsTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre Completo</th>
                    <th>Edad</th>
                    <th>Carrera</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#studentsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
                "ajax": {
                    "url": "/Student/GetAll", // Nota: el controlador se llama Student (singular)
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "fullName", "autoWidth": true },
                    { "data": "age", "autoWidth": true },
                    { "data": "carrera", "autoWidth": true },
                    {
                        "data": "id",
                        "render": function (data) {
                            return `
                                <div class="text-center">
                                    <a href="/Student/Edit/${data}" class='btn btn-success btn-sm mx-1' title="Editar"><i class="fas fa-edit"></i></a>
                                    <a href="/Student/Delete/${data}" class='btn btn-danger btn-sm mx-1' title="Borrar"><i class="fas fa-trash"></i></a>
                                </div>
                            `;
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "120px"
                    }
                ]
            });
        });
    </script>
}